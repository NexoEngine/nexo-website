---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get reading time estimate
const wordsPerMinute = 200;
const words = post.body.split(/\s+/).length;
const readingTime = Math.ceil(words / wordsPerMinute);

// Get related posts
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const relatedPosts = allPosts
  .filter(p => 
    p.slug !== post.slug && 
    p.data.tags.some(tag => post.data.tags.includes(tag))
  )
  .slice(0, 3);
---

<PageLayout 
  title={post.data.title} 
  description={post.data.description}
  image={post.data.image?.src}
>
  <div class="min-h-screen bg-nexo-black text-white">
    <!-- Hero Section -->
    <header class="relative py-16 sm:py-24 bg-chrome-radial bg-chrome-grid bg-[size:20px_20px]">
      <div class="absolute inset-0 bg-gradient-radial from-nexo-blue/10 via-transparent to-transparent"></div>
      
      <div class="nexo-container relative">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Breadcrumb -->
          <nav class="mb-8">
            <ol class="flex items-center justify-center space-x-2 text-sm text-nexo-chromeGray">
              <li><a href="/" class="hover:text-nexo-blue transition-colors">Home</a></li>
              <li class="before:content-['/'] before:mx-2">
                <a href="/blog/" class="hover:text-nexo-blue transition-colors">Blog</a>
              </li>
              <li class="before:content-['/'] before:mx-2 text-gray-300">
                {post.data.title}
              </li>
            </ol>
          </nav>

          <!-- Tags -->
          <div class="flex flex-wrap justify-center gap-2 mb-6">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 text-sm font-medium bg-nexo-blue/20 text-nexo-blue rounded-full">
                {tag}
              </span>
            ))}
          </div>

          <!-- Title -->
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight chrome-gradient-text mb-6">
            {post.data.title}
          </h1>

          <!-- Description -->
          <p class="text-xl text-nexo-gray mb-8 max-w-3xl mx-auto">
            {post.data.description}
          </p>

          <!-- Meta -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-nexo-chromeGray">
            <div class="flex items-center gap-4">
              <span class="font-medium text-gray-300">{post.data.author}</span>
              <span>•</span>
              <time dateTime={post.data.publishedAt.toISOString()}>
                {post.data.publishedAt.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
            <span class="hidden sm:inline">•</span>
            <span>{readingTime} min read</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {post.data.image && (
      <section class="py-8">
        <div class="nexo-container">
          <div class="max-w-4xl mx-auto">
            <div class="aspect-video rounded-xl overflow-hidden shadow-2xl">
              <img 
                src={post.data.image.src} 
                alt={post.data.image.alt}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Article Content -->
    <article class="py-12">
      <div class="nexo-container">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg prose-invert prose-blue max-w-none">
            <Content />
          </div>

          <!-- Article Footer -->
          <footer class="mt-16 pt-8 border-t border-nexo-chromeGray/20">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
              <!-- Author Info -->
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-nexo-blue/20 flex items-center justify-center">
                  <span class="text-nexo-blue font-bold text-lg">
                    {post.data.author.charAt(0)}
                  </span>
                </div>
                <div>
                  <div class="font-medium text-gray-300">{post.data.author}</div>
                  <div class="text-sm text-nexo-gray">NEXO Team Member</div>
                </div>
              </div>

              <!-- Share Buttons -->
              <div class="flex items-center gap-3">
                <span class="text-sm text-nexo-gray">Share:</span>
                <a 
                  href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 rounded-lg bg-nexo-darkBlue/50 text-nexo-blue hover:bg-nexo-blue hover:text-white transition-colors"
                  aria-label="Share on Twitter"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </a>
                <a 
                  href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 rounded-lg bg-nexo-darkBlue/50 text-nexo-blue hover:bg-nexo-blue hover:text-white transition-colors"
                  aria-label="Share on LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </article>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="py-16 bg-nexo-darkBlue/30">
        <div class="nexo-container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl font-bold mb-12 text-center chrome-gradient-text">
              Related Posts
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {relatedPosts.map((relatedPost) => (
                <article class="nexo-card group hover:scale-[1.02] transition-transform duration-300">
                  {relatedPost.data.image && (
                    <div class="aspect-video rounded-lg overflow-hidden mb-4">
                      <img 
                        src={relatedPost.data.image.src} 
                        alt={relatedPost.data.image.alt}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  
                  <div class="space-y-3">
                    <div class="flex flex-wrap gap-2">
                      {relatedPost.data.tags.slice(0, 2).map((tag) => (
                        <span class="px-2 py-1 text-xs font-medium bg-nexo-blue/20 text-nexo-blue rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                    
                    <h3 class="text-xl font-bold text-white group-hover:text-nexo-blue transition-colors">
                      <a href={`/blog/${relatedPost.slug}/`}>
                        {relatedPost.data.title}
                      </a>
                    </h3>
                    
                    <p class="text-nexo-gray line-clamp-3">
                      {relatedPost.data.description}
                    </p>
                    
                    <div class="flex items-center justify-between text-sm text-nexo-chromeGray">
                      <span>{relatedPost.data.author}</span>
                      <time dateTime={relatedPost.data.publishedAt.toISOString()}>
                        {relatedPost.data.publishedAt.toLocaleDateString('en-US', {
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Newsletter CTA -->
    <section class="py-16">
      <div class="nexo-container">
        <div class="max-w-4xl mx-auto text-center">
          <div class="chrome-card">
            <h3 class="text-3xl font-bold mb-4 chrome-gradient-text">
              Ready to Build VR Games?
            </h3>
            <p class="text-xl text-nexo-gray mb-8">
              Download NEXO today and start creating immersive VR experiences.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/getting-started/installation/" class="chrome-btn px-8 py-3">
                Get Started
              </a>
              <a href="https://github.com/NexoEngine/game-engine" target="_blank" rel="noopener noreferrer" class="nexo-btn-outline px-8 py-3">
                View on GitHub
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</PageLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Custom prose styles for better VR-themed content */
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: #E8E9EA;
  }
  
  .prose a {
    color: #2563ff;
    text-decoration: none;
  }
  
  .prose a:hover {
    color: rgba(37, 99, 255, 0.8);
  }
  
  .prose code {
    background-color: rgba(23, 29, 46, 0.5);
    color: #2563ff;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  
  .prose pre {
    background-color: rgba(23, 29, 46, 0.7);
    border: 1px solid rgba(159, 158, 161, 0.2);
  }
  
  .prose blockquote {
    border-left: 4px solid #2563ff;
    background-color: rgba(23, 29, 46, 0.3);
    font-style: italic;
  }
</style>