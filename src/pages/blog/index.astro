---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

const allBlogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort posts by publish date (newest first)
const sortedPosts = allBlogPosts.sort((a, b) => 
  b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);

const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);
---

<PageLayout title="NEXO Blog" description="Latest news, tutorials, and insights from the NEXO VR Game Engine team.">
  <div class="min-h-screen bg-nexo-black text-white">
    <main class="py-12 sm:py-16">
      <div class="nexo-container">
        <!-- Header -->
        <div class="text-center mb-16">
          <h1 class="text-4xl font-bold tracking-tight chrome-gradient-text sm:text-5xl mb-6">
            NEXO Blog
          </h1>
          <p class="text-xl text-nexo-gray max-w-2xl mx-auto">
            Latest news, tutorials, and insights from the world of VR game development
          </p>
        </div>

        <!-- Featured Posts -->
        {featuredPosts.length > 0 && (
          <section class="mb-16">
            <h2 class="text-2xl font-bold mb-8 text-gray-300">Featured Posts</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {featuredPosts.map((post) => (
                <article class="chrome-card group hover:scale-[1.02] transition-transform duration-300">
                  {post.data.image && (
                    <div class="aspect-video rounded-lg overflow-hidden mb-6">
                      <img 
                        src={post.data.image.src} 
                        alt={post.data.image.alt}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  <div class="space-y-4">
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags.map((tag) => (
                        <span class="px-3 py-1 text-xs font-medium bg-nexo-blue/20 text-nexo-blue rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                    
                    <h3 class="text-xl font-bold text-gray-300 group-hover:text-nexo-blue transition-colors">
                      <a href={`/blog/${post.slug}/`}>
                        {post.data.title}
                      </a>
                    </h3>
                    
                    <p class="text-nexo-gray line-clamp-3">
                      {post.data.description}
                    </p>
                    
                    <div class="flex items-center justify-between text-sm text-nexo-chromeGray">
                      <span>By {post.data.author}</span>
                      <time dateTime={post.data.publishedAt.toISOString()}>
                        {post.data.publishedAt.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </section>
        )}

        <!-- All Posts -->
        <section>
          <h2 class="text-2xl font-bold mb-8 text-gray-300">All Posts</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {regularPosts.map((post) => (
              <article class="nexo-card group hover:scale-[1.02] transition-transform duration-300">
                {post.data.image && (
                  <div class="aspect-video rounded-lg overflow-hidden mb-4">
                    <img 
                      src={post.data.image.src} 
                      alt={post.data.image.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                
                <div class="space-y-3">
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="px-2 py-1 text-xs font-medium bg-nexo-blue/20 text-nexo-blue rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  <h3 class="text-lg font-bold text-white group-hover:text-nexo-blue transition-colors">
                    <a href={`/blog/${post.slug}/`}>
                      {post.data.title}
                    </a>
                  </h3>
                  
                  <p class="text-nexo-gray text-sm line-clamp-2">
                    {post.data.description}
                  </p>
                  
                  <div class="flex items-center justify-between text-xs text-nexo-chromeGray">
                    <span>{post.data.author}</span>
                    <time dateTime={post.data.publishedAt.toISOString()}>
                      {post.data.publishedAt.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                      })}
                    </time>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>

        <!-- Newsletter Signup -->
        <section class="mt-16 text-center">
          <div class="chrome-card max-w-2xl mx-auto">
            <h3 class="text-2xl font-bold mb-4 chrome-gradient-text">
              Stay Updated
            </h3>
            <p class="text-nexo-gray mb-6">
              Get the latest NEXO news, tutorials, and VR development tips delivered to your inbox.
            </p>
            <form class="flex flex-col sm:flex-row gap-4">
              <input 
                type="email" 
                placeholder="Enter your email" 
                class="flex-1 px-4 py-3 rounded-lg bg-nexo-darkBlue/50 border border-nexo-chromeGray/30 text-white placeholder-nexo-gray focus:outline-none focus:border-nexo-blue"
              />
              <button class="chrome-btn px-6 py-3 whitespace-nowrap">
                Subscribe
              </button>
            </form>
          </div>
        </section>
      </div>
    </main>
  </div>
</PageLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>